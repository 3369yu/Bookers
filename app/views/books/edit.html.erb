<h1>Editing Book</h1>


<%= form_with model: @book do |f| %>
  <p class="edit-title">
    Title
  </p>
  <p class="form">
    <%= f.text_field :title %>
  </p>
  <p class="edit-title">
    Body
  </p>
  <p class="form">
  <%= f.text_area :body %>
  </p>
  <p class="form">
  <%= f.submit 'Update Book' %>
  </p>

<div class=link-box>
  <div class="link-item">
    <%= link_to 'Show', book_path(@book.id) %>
  </div>
  <div class="link-item">
      |
  </div>
  <div class="link-item">
    <%= link_to 'Back', '/books' %>
  </div>
</div>
<% end %>