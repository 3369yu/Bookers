<h2>Books</h2>

<table>
  <tr>
    <th>Title</th>
    <th>Body</th>
    <th colspan="3"></th>
  <tr>
    <% @book.each do |book| %>
  <tr>
    <td><%= book.title %></td>
    <td><%= book.body %></td>
    <td><%= link_to 'Show', book_path(book.id) %></td>
    <td><%= link_to 'Edit', edit_book_path(book.id) %></td>
    <td><%= link_to 'Destroy', book_path(book.id), method: :delete,  "data-confirm" =>"Are you sure?" %></td>
  </tr>
    <% end %>
</table>

<h2>New book</h2>
<%= form_with model: @book, url: '/books', method: :post do |f| %>
  <p class="form-title">
    Title
  </p>
  <p class="form">
    <%= f.text_field :title %>
  </p>

  <p class="form-title">
    body
  </p>
  <p class="form">
  <%= f.text_area :body %>
  </p>

  <p class="form">
  <%= f.submit 'Create Book' %>
  </p>
<% end %>